# Payment Provider Configuration
# Add these to your .env file

# Base URL for callbacks
BASE_URL=http://localhost:3000

# Vodacom M-Pesa Configuration
VODACOM_ENABLED=true
VODACOM_API_URL=https://api.vodacom.co.tz
VODACOM_API_KEY=your_vodacom_api_key_here
VODACOM_BUSINESS_CODE=your_business_code
VODACOM_PASSWORD=your_vodacom_password
VODACOM_PAYBILL_NUMBER=your_paybill_number

# Tigo Pesa Configuration
TIGO_ENABLED=true
TIGO_API_URL=https://api.tigo.co.tz
TIGO_API_KEY=your_tigo_api_key_here

# Airtel Money Configuration
AIRTEL_ENABLED=true
AIRTEL_API_URL=https://api.airtel.co.tz
AIRTEL_API_KEY=your_airtel_api_key_here

# Note: Replace the placeholder values with actual API credentials from each provider
